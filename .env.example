# ==========================================
# CONFIGURACIÓN DE ENTORNO
# Copia este archivo como .env y configura tus valores
# IMPORTANTE: Nunca subas el archivo .env a git
# ==========================================

# ==========================================
# ENTORNO DE EJECUCIÓN
# ==========================================
# Valores posibles: development, production, testing, docker
FLASK_ENV=development
FLASK_DEBUG=True

# ==========================================
# SEGURIDAD
# ==========================================
# Clave secreta de Flask (CRÍTICO: cambiar en producción)
# Genera una clave segura con: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=3eb812b90e095a2a421f49915c6deab93af07c378d1414ce0f1084203931b537

# ==========================================
# BASE DE DATOS - DESARROLLO LOCAL (XAMPP)
# ==========================================
# Formato: mysql+pymysql://usuario:contraseña@host:puerto/nombre_base_datos
DATABASE_URL=mysql+pymysql://root:@localhost/finanzas_personales

# ==========================================
# BASE DE DATOS - PRODUCCIÓN (Ejemplo con Supabase/PostgreSQL)
# ==========================================
# Descomentar y configurar para producción
# DATABASE_URL=postgresql://usuario:password@host:puerto/base_datos
# DATABASE_URL=postgresql://user:pass@db.supabase.co:5432/postgres

# ==========================================
# BASE DE DATOS - PRUEBAS
# ==========================================
#TEST_DATABASE_URL=mysql+pymysql://root:@localhost/finanzas_personales_test

# ==========================================
# CONFIGURACIÓN DE CORREO ELECTRÓNICO
# ==========================================
# Gmail (requiere contraseña de aplicación: https://myaccount.google.com/apppasswords)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-password-de-aplicacion-gmail
MAIL_DEFAULT_SENDER=noreply@finanzas.com

# Otros proveedores de correo:
# SendGrid:
# MAIL_SERVER=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=tu-sendgrid-api-key

# Outlook:
# MAIL_SERVER=smtp-mail.outlook.com
# MAIL_PORT=587

# ==========================================
# CONFIGURACIÓN DE ARCHIVOS
# ==========================================
# Tamaño máximo de archivo en bytes (16MB = 16777216)
MAX_FILE_SIZE=16777216

# Carpeta para archivos subidos
UPLOAD_FOLDER=uploads

# Carpeta para backups
BACKUP_FOLDER=backups

# ==========================================
# CONFIGURACIÓN DE SESIÓN
# ==========================================
# Duración de la sesión en días
SESSION_LIFETIME_DAYS=7

# ==========================================
# ZONA HORARIA
# ==========================================
# Ver lista completa: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TIMEZONE=America/Bogota
# Otros ejemplos:
# TIMEZONE=America/Mexico_City
# TIMEZONE=America/Argentina/Buenos_Aires
# TIMEZONE=Europe/Madrid

# ==========================================
# CONFIGURACIÓN DE LOGGING
# ==========================================
# Nivel de logging: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Logging a stdout (útil para Docker)
LOG_TO_STDOUT=False

# ==========================================
# CONFIGURACIÓN DE CACHE
# ==========================================
# Tipos: simple, redis, memcached, filesystem
CACHE_TYPE=simple

# Si usas Redis:
# CACHE_TYPE=redis
# CACHE_REDIS_URL=redis://localhost:6379/0

# ==========================================
# CONFIGURACIÓN DE RATE LIMITING
# ==========================================
# URL de almacenamiento para rate limiting
RATELIMIT_STORAGE_URL=memory://

# Si usas Redis:
# RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# ==========================================
# CONFIGURACIÓN DE BACKUPS AUTOMÁTICOS
# ==========================================
# Habilitar backups automáticos
AUTO_BACKUP_ENABLED=False

# Días de retención de backups
BACKUP_RETENTION_DAYS=30

# ==========================================
# APIs EXTERNAS (OPCIONAL)
# ==========================================
# OpenAI (para funciones de IA futuras)
OPENAI_API_KEY=

# Stripe (para pagos/suscripciones futuras)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# SendGrid (alternativa para emails)
SENDGRID_API_KEY=

# Twilio (para SMS futuro)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ==========================================
# CONFIGURACIÓN DE PRODUCCIÓN (IMPORTANTE)
# ==========================================
# Hosts permitidos (separados por coma)
ALLOWED_HOSTS=localhost,127.0.0.1,tudominio.com

# Forzar HTTPS en producción
FORCE_HTTPS=False

# ==========================================
# CONFIGURACIÓN DE MONITOREO Y ERRORES
# ==========================================
# Sentry (para tracking de errores en producción)
SENTRY_DSN=

# Google Analytics
GOOGLE_ANALYTICS_ID=

# ==========================================
# CONFIGURACIÓN DE CDN (OPCIONAL)
# ==========================================
# Cloudinary (para almacenar imágenes en la nube)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# AWS S3 (alternativa para archivos)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_S3_REGION=

# ==========================================
# CONFIGURACIÓN DE REDES SOCIALES (LOGIN FUTURO)
# ==========================================
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook OAuth
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ==========================================
# CONFIGURACIÓN DE CRON/TAREAS (PRODUCCIÓN)
# ==========================================
# Habilitar tareas programadas
ENABLE_SCHEDULER=False

# Hora para backup diario (formato 24h: HH:MM)
DAILY_BACKUP_TIME=03:00

# Hora para envío de reportes mensuales
MONTHLY_REPORT_TIME=09:00

# ==========================================
# CONFIGURACIÓN DE DESARROLLO
# ==========================================
# Recargar automáticamente en cambios
FLASK_AUTO_RELOAD=True

# Puerto de desarrollo
FLASK_RUN_PORT=5000

# Host de desarrollo
FLASK_RUN_HOST=0.0.0.0

# ==========================================
# CONFIGURACIÓN DE BASE DE DATOS AVANZADA
# ==========================================
# Pool de conexiones
SQLALCHEMY_POOL_SIZE=10
SQLALCHEMY_MAX_OVERFLOW=20
SQLALCHEMY_POOL_TIMEOUT=30
SQLALCHEMY_POOL_RECYCLE=3600

# ==========================================
# CONFIGURACIÓN DE IDIOMA Y LOCALIZACIÓN
# ==========================================
# Idioma por defecto: es, en
DEFAULT_LANGUAGE=es

# Moneda por defecto: COP, USD, EUR, MXN, ARS
DEFAULT_CURRENCY=COP

# ==========================================
# NOTAS IMPORTANTES
# ==========================================
# 1. Nunca subas el archivo .env a git
# 2. Genera SECRET_KEY único para producción
# 3. Usa contraseñas de aplicación para Gmail
# 4. Configura HTTPS en producción (SESSION_COOKIE_SECURE=True)
# 5. Cambia las credenciales por defecto
# 6. Habilita backups automáticos en producción
# 7. Configura Sentry para tracking de errores
# 8. Usa Redis para cache y rate limiting en producción