# Configuración de entorno
# Copia este archivo como .env y configura tus valores

# Entorno de ejecución (development, production, testing)
FLASK_ENV=development

# Clave secreta de Flask (generar una única y segura en producción)
SECRET_KEY=tu-clave-secreta-super-segura-cambiar-en-produccion

# Configuración de Base de Datos Local (XAMPP)
DATABASE_URL=mysql+pymysql://root:@localhost/finanzas_personales

# Configuración de Base de Datos para Producción (Supabase)
# DATABASE_URL=postgresql://usuario:password@host:puerto/base_datos

# Configuración de correo (para notificaciones futuras)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-password-de-aplicacion

# Configuración de archivos
MAX_FILE_SIZE=16777216
UPLOAD_FOLDER=uploads

# Zona horaria
TIMEZONE=America/Bogota

# Configuración de sesión
SESSION_LIFETIME_DAYS=7